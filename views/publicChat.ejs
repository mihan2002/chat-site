<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Public Chat</title>
    <link rel="stylesheet" href="publicChat.css" />
  </head>
  <body>
    <ul id="messages">
      <% chatHistory.forEach(element => { %> <% if (element.sender ==
      username){%>
      <li class="me"><%= element.sender %> : <%= element.message %></li>
      <% } else{%>
      <li><%= element.sender %> : <%= element.message %></li>
      <% } %> <% }) %>
    </ul>
    <form id="form" action="">
      <input id="input" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var socket = io();

        // Send the username to the server after connecting
        const username = "<%= username %>";
        console.log("Username:", username); // Debugging log

        socket.emit("login", username);

        var form = document.getElementById("form");
        var input = document.getElementById("input");

        form.addEventListener("submit", function (e) {
          e.preventDefault();
          if (input.value) {
            socket.emit("public-chat", {
              username: username,
              message: input.value,
            });
            console.log("Sent message:", input.value); // Debugging log
            input.value = "";
          }
        });

        socket.on("public-chat", function (data) {
          console.log("Received message:", data); // Debugging log
          var item = document.createElement("li");
          item.textContent = data.username + ": " + data.message;

          if (data.username === username) {
            item.classList.add("me");
          }

          document.getElementById("messages").appendChild(item);
          window.scrollTo(0, document.body.scrollHeight);
        });
      });
    </script>
  </body>
</html>
